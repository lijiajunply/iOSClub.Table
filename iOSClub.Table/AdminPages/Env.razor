@page "/Admin/Env"
@inject IWebHostEnvironment HostEnvironment

<PageTitle>环境</PageTitle>

<PageView>
    <Context>
        @if (HostEnvironment.IsDevelopment())
        {
            <Result Title="当前为开发环境！"/>
        }
        else if (HostEnvironment.IsProduction())
        {
            <Result Title="当前为生产环境！"/>
        }
        <Divider/>
        <Descriptions>
            <DescriptionsItem Title="当前储存路径:">@HostEnvironment.WebRootPath</DescriptionsItem>
            <DescriptionsItem Title="Telephone">@HostEnvironment.ContentRootPath</DescriptionsItem>
            <DescriptionsItem Title="Live">@HostEnvironment.ApplicationName</DescriptionsItem>
            <DescriptionsItem Title="Remark">Empty</DescriptionsItem>
            <DescriptionsItem Title="Address">
                No. 18, Wantang Road, Xihu District, Hangzhou, Zhejiang, China
            </DescriptionsItem>
        </Descriptions>
    </Context>
</PageView>