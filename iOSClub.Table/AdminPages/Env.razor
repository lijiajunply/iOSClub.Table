@page "/Env"
@inject IWebHostEnvironment HostEnvironment

<PageTitle>环境</PageTitle>

<PageView>
    <Context>
        @if (HostEnvironment.IsDevelopment())
        {
            <Result Title="当前为开发环境！"/>
        }
        else if (HostEnvironment.IsProduction())
        {
            <Result Title="当前为生产环境！"/>
        }
        <GridRow>
            <GridCol Span="12">

            </GridCol>
            <GridCol Span="12">

            </GridCol>
        </GridRow>
    </Context>
</PageView>