<PageHeader Ghost="false" Class="data">
    <PageHeaderTitle>
        <header>
            <i class="light" style="background-color: #fd6458;"></i>
            <i class="light" style="background-color: #ffbf2b; margin-left: 8px;"></i>
            <i class="light" style="background-color: #24cc3d; margin-left: 8px;"></i>
        </header>
    </PageHeaderTitle>
    <PageHeaderExtra>
        @Extra
    </PageHeaderExtra>
    <PageHeaderContent>
        @Context
    </PageHeaderContent>
</PageHeader>

@code {
    [Parameter]
    public RenderFragment? Extra { get; set; }
    
    [Parameter]
    public RenderFragment? Context { get; set; }
}

<style>
    .data{
        overflow: visible;
        border-radius: 10px;
        scroll-behavior: auto;
        margin-top: 10px;
        margin-bottom: 10px;
        
    }
    .light {
       
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }
	
	header{
	    overflow: hidden;
        /* 防止子元素超出边界 */
        display: flex;
        scroll-snap-align: end;
	}
</style>