@using iOSClub.Share.Data
<div class="header-box">
    <h1 class="logo">XAUAT iOS Club</h1>
    <nav class="navbar-expand @NavMenuCssClass">
        <ul class="nav-menu">
            @foreach (var item in NavLists)
            {
                <NavLink class="nav-item" href="@item.Url" Match="NavLinkMatch.All">@item.Name</NavLink>
            }
        </ul>
    </nav>
    @* <div> *@
    @*     <Icon OnClick="@ToggleNavMenu" Type="menu" Theme="outline"/> *@
    @* </div> *@
</div>

@code {
    [Parameter] public List<NavModel> NavLists { get; set; } = new();

    private bool collapseNavMenu;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}

<style>
    a {
        color: #f5f5f7;
        align-items: center;
        justify-content: space-between;
    }
    
    a:hover {
        text-decoration: underline;
    }
    
    .header-box {
        padding-left: 10px;
        padding-right: 10px;
        color: #333;
        border-radius: 10px;
        /* 添加圆角 */
        overflow: hidden;
        /* 防止子元素超出边界 */
        display: flex;
        scroll-snap-align: end;
        align-items: center;
        justify-content: space-between;
        text-align: center;
        background: rgba(255, 255, 255, 0.3);
        -webkit-backdrop-filter: blur(20px);
        backdrop-filter: blur(20px);
        box-shadow: inset 0 0 6px rgba(255, 255, 255, 0.3);
    }
</style>