@using iOSClub.Table.Data
<header class="header">
    <h1 class="logo">XAUAT iOS Club</h1>

    <nav class="navbar">
        <ul class="nav-menu">
            @foreach (var item in NavLists)
            {
                <NavLink class="nav-item" href="@item.Url" Match="NavLinkMatch.All">@item.Name</NavLink>
            }
        </ul>
    </nav>
</header>

@code {

    [Parameter]
    public List<NavModel> NavLists { get; set; } = new();

}

<style scoped>
nav {
    color: #fff;
}

h1{
  color: #f5f5f7;
}

h5{
  color: #f5f5f7;
}

a {
    color: #fff;
    align-items: center;
    justify-content: space-between;
}

a:hover {
    text-decoration: underline;
}

</style>