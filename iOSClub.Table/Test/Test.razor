@page "/Test"
@inject IWebHostEnvironment HostEnvironment
@inject NavigationManager Nav

<body>
  <div class="wrap">
    <div class="page-header">header</div>
    <div class="page-main">
      <div >弹性滚动区域</div>
    </div>

    <div class="footer">footer</div>
  </div>

</body>

<style>
  /*设置html和body的高度为显示屏的高度*/
  html,body{ all: revert; width:100%;height:100%;overflow:hidden;margin:0;}

html{_height:auto;_padding:100px 0 50px;}

  .wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    /*布局方向是垂直的*/
    flex-direction: column;
    width: 100%;
    height: 100%;
  }

  /*设置顶部和底部的高度*/

  .page-header,
  .footer {
  all: revert;
    height: 40px;
    line-height: 40px;
    background-color: #D8D8D8;
    text-align: center;
  }

  /*设置高度是跟父元素的高度一致，100%；*/

  /*实际高度是 100% 减去顶部高度和底部高度，左右两边固定，中间是剩余100%原理一致*/

  .page-main {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
    overflow: auto;
  }
</style>

@code {

    protected override Task OnInitializedAsync()
    {
        if (HostEnvironment.IsProduction())
            Nav.NavigateTo("", true);

        return base.OnInitializedAsync();
    }

}